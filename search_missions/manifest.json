{
  "manifest_version": 2,
  "name": "Autopassage search mission SC",
  "version": "1.0",
  "description": "Автопрохождение поисковых миссий",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["*://*.starcombats.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "scripts": ["tesseract.min.js","background.js"],
    "persistent": true
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "Auto passage"
  },
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "tabs"
  ],
  "host_permissions": [
    "*://*.starcombats.com/*"
  ],
  "web_accessible_resources": [
        "tesseract.min.js",
        "tesseract-core.wasm.js",
        "worker.min.js",
        "lang/eng.traineddata",
        "injected.js"
  ]
}