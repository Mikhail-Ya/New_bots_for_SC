{
  "manifest_version": 3,
  "name": "auto-repair of lives in SC",
  "version": "1.0",
  "description": "Автовосстановление жизней",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "tabs"
  ],
  "content_scripts": [
    {
      "matches": ["*://*.starcombats.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "host_permissions": [
    "http://*.starcombats.com/*"
  ],
  "web_accessible_resources": [
    {
      "resources": ["auto-repair.js"],
      "matches": ["http://*.starcombats.com/*"]
    }
  ]
}