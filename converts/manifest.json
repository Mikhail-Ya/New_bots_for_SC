{
  "manifest_version": 3,
  "name": "Convert autobuild SC",
  "version": "1.0",
  "description": "Автоматизация подачи заявок и управления жуками",

  "permissions": ["storage", "activeTab", "scripting","tabs"],

  "background": {
    "service_worker": "background.js"
  },

  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "Пульт управления"
  },

  "content_scripts": [
    {
      "matches": ["https://*.starcombats.com/*","http://*.starcombats.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],

  "host_permissions": [
    "http://*.starcombats.com/*"
  ]
}
